---
import { Input } from "@/components/starwind/input";
import { Card, CardContent, CardFooter } from "@/components/starwind/card";
import { Textarea } from "@/components/starwind/textarea";
import { Button } from "@/components/starwind/button";
import { Label } from "@/components/starwind/label";

const email = import.meta.env.EMAIL;
const phone = import.meta.env.PHONE;
---

<section id="contact"
  class="relative flex flex-col md:flex-row items-center justify-between gap-12 lg:gap-20 px-6 lg:px-10 py-16 lg:py-18 mx-auto max-w-7xl"
>
  <div>
    <form
      name="contact"
      method="POST"
      data-netlify="true"
      netlify-honeypot="bot-field"
    >
      <input type="hidden" name="form-name" value="contact" />
      <p class="hidden">
        <label>
            Don't fill this out if you're a human: 
            <input name="bot-field"/>
        </label
        >
      </p>
      <Card class="flex flex-col pt-4">
        <CardContent class="space-y-4">
          <Label for="email">Email</Label>
          <Input id="email" placeholder="type your email" class="mt-2" />

          <Label for="name">Name</Label>
          <Input id="name" placeholder="enter your name" class="mt-2" />

          <Label for="message">Message</Label>
          <Textarea
            id="message"
            placeholder="write your message.."
            class="mt-2"
          />
        </CardContent>
        <CardFooter>
          <Button>Send message</Button>
        </CardFooter>
      </Card>
    </form>
  </div>
  <div class="flex flex-col space-y-4">
    <h3 class="font-bold mb-4">Contact me</h3>
    <div class="space-y-4">
      <div class="flex items-center gap-2">
        <svg
          xmlns="http://www.w3.org/2000/svg"
          width="20"
          height="20"
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="2"
          stroke-linecap="round"
          stroke-linejoin="round"
          class="lucide lucide-mail-icon lucide-mail"
          ><path d="m22 7-8.991 5.727a2 2 0 0 1-2.009 0L2 7"></path><rect
            x="2"
            y="4"
            width="20"
            height="16"
            rx="2"></rect></svg
        >
        <p>{email}</p>
      </div>
      <div class="flex items-center gap-2">
        <svg
          xmlns="http://www.w3.org/2000/svg"
          width="20"
          height="20"
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="2"
          stroke-linecap="round"
          stroke-linejoin="round"
          class="lucide lucide-smartphone-icon lucide-smartphone"
          ><rect width="14" height="20" x="5" y="2" rx="2" ry="2"></rect><path
            d="M12 18h.01"></path></svg
        >
        <p>{phone}</p>
      </div>
    </div>
    <h3 class="font-bold mb-4 mt-8">Connect with me</h3>
    <div class="space-y-4">
      <div class="flex items-center gap-4">
        <a href="">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="24"
            height="24"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
            class="lucide lucide-linkedin-icon lucide-linkedin"
            ><path
              d="M16 8a6 6 0 0 1 6 6v7h-4v-7a2 2 0 0 0-2-2 2 2 0 0 0-2 2v7h-4v-7a6 6 0 0 1 6-6z"
            ></path><rect width="4" height="12" x="2" y="9"></rect><circle
              cx="4"
              cy="4"
              r="2"></circle></svg
          >
        </a>
        <svg
          xmlns="http://www.w3.org/2000/svg"
          width="24"
          height="24"
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="2"
          stroke-linecap="round"
          stroke-linejoin="round"
          class="lucide lucide-github-icon lucide-github"
          ><path
            d="M15 22v-4a4.8 4.8 0 0 0-1-3.5c3 0 6-2 6-5.5.08-1.25-.27-2.48-1-3.5.28-1.15.28-2.35 0-3.5 0 0-1 0-3 1.5-2.64-.5-5.36-.5-8 0C6 2 5 2 5 2c-.3 1.15-.3 2.35 0 3.5A5.403 5.403 0 0 0 4 9c0 3.5 3 5.5 6 5.5-.39.49-.68 1.05-.85 1.65-.17.6-.22 1.23-.15 1.85v4"
          ></path><path d="M9 18c-4.51 2-5-2-7-2"></path></svg
        >
        <a href="">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="24"
            height="24"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
            class="lucide lucide-instagram-icon lucide-instagram"
            ><rect width="20" height="20" x="2" y="2" rx="5" ry="5"></rect><path
              d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z"></path><line
              x1="17.5"
              x2="17.51"
              y1="6.5"
              y2="6.5"></line></svg
          >
        </a>
      </div>
    </div>
  </div>
</section>

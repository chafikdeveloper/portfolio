---
import data from "../data/testimonials.json";
---

<section class="px-6 lg:px-10 py-16 lg:py-18 mx-auto max-w-7xl">
  <h1 class="text-center font-bold text-3xl mb-8">Testemonials</h1>
  <div class="columns-1 md:columns-2 lg:columns-3 gap-6 space-y-6">
    {
      data.map((item) => (
        <article class="break-inside-avoid flex flex-col p-4 border-2 rounded-md shadow-md bg-white dark:bg-slate-800">
          <div>
            <h5 class="font-bold text-lg">{item.name}</h5>
            <p class="font-medium text-sm">{item.role}</p>
          </div>
          <div class="mt-4">
            <p class="text-md font-medium text-gray-700">{item.message}</p>
          </div>
        </article>
      ))
    }
  </div>
</section>
